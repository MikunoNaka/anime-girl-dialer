        app:layout_constraintTop_toBottomOf="@+id/num_4" />

    <Button
        android:id="@+id/num_8"
        style="@style/ButtonStyle"
        android:text="@string/num_8"
        app:layout_constraintEnd_toEndOf="@+id/num_5"
        app:layout_constraintStart_toStartOf="@+id/num_5"
        app:layout_constraintTop_toBottomOf="@+id/num_5" />

    <Button
        android:id="@+id/num_9"
        style="@style/ButtonStyle"
        android:text="@string/num_9"
        app:layout_constraintEnd_toEndOf="@+id/num_6"
        app:layout_constraintStart_toStartOf="@+id/num_6"
        app:layout_constraintTop_toBottomOf="@+id/num_6" />

</androidx.constraintlayout.widget.ConstraintLayout>